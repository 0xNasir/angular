ts_library(
    name = "npm_package_spec_lib",
    testonly = True,
    srcs = ["npm_package/npm_package.spec.ts"],
    deps = [
        "@npm//@types",
    ],
)

jasmine_node_test(
    name = "test_npm_package",
    srcs = [":npm_package_spec_lib"],
    data = [
        "//packages/zone.js:npm_package",
        "@npm//shelljs",
    ],
)

ts_library(
    name = "test_browser_lib",
    testonly = True,
    srcs = glob(
        [
            "common/*.ts",
            "zone-spec/*.ts",
            "rxjs/*.ts",
            "browser/*.ts",
            "extra/cordova.spec.ts",
            "mocha-patch.spec.ts",
            "jasmine-patch.spec.ts",
            "test_fake_polyfill.ts",
            "common_tests.ts",
            "test-util.ts",
            "wtf_mock.ts",
            "browser-env-setup.ts",
            "browser_entry_point.ts",
            "test-env-setup-jasmine.ts",
        ],
    ),
    visibility = ["//packages/zone.js:__subpackages__"],
    deps = [
        "//packages/zone.js/lib",
        "@npm//@types/shelljs",
        "@npm//@types/systemjs",
        "@npm//rxjs",
        "@npm//shelljs",
        "@npm//systemjs",
    ],
)

rollup_bundle(
    name = "browser_test_rollup",
    testonly = True,
    entry_point = "packages/zone.js/test/browser_entry_point",
    globals = {
        "electron": "electron",
    },
    license_banner = "//packages:license-banner.txt",
    deps = [
        ":test_browser_lib",
    ],
)

filegroup(
    name = "browser_test_rollup.es5",
    testonly = True,
    srcs = [":browser_test_rollup"],
    output_group = "umd",
)

nodejs_binary(
    name = "ws-test-server",
    data = [
        "ws-server.js",
        "@npm//nodejs-websocket",
    ],
    entry_point = "angular/packages/zone.js/test/ws-server.js",
)

karma_web_test_suite(
    name = "karma_jasmine_test",
    srcs = [
        "fake_entry.js",
    ],
    bootstrap = [
        "//packages/zone.js/dist:zone-testing-bundle-dist-dev-test",
        ":browser_test_rollup.es5",
    ],
    deps = [
        ":ws-test-server",
    ],
)
