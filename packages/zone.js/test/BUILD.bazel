            "node-env-setup.ts",
            "node_entry_point_common.ts",
            "node_entry_point.ts",
            "node_entry_point_no_patch_clock.ts",
            "node_bluebird_entry_point.ts",
            "test-env-setup-jasmine.ts",
            "test-env-setup-jasmine-no-patch-clock.ts",
        ],
    ),
    deps = [
        "//packages/zone.js/lib",
        "@npm//@types/shelljs",
        "@npm//@types/systemjs",
        "@npm//rxjs",
        "@npm//shelljs",
        "@npm//systemjs",
    ],
)

